{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    }
    "globals": {
      "expect": true,
      "require": true,
      "define": true,
      "module": true,
      "beforeEach": true,
      "afterEach": true,
      "describe": true,
      "it": true,
      "done": true,
      "pit": true,
      "xdescribe": true,
      "xit": true
    }
}
